<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/dp_10"
    tools:context=".Abouts_Activty.About_us">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="7dp"
       >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:background="#4c4c4c"
            android:baselineAligned="false">

            <ImageView
                android:id="@+id/image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:layout_margin="@dimen/dp_10"
                android:background="#666"
                android:src="@mipmap/profile" />

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="29dp"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp"
                android:layout_toStartOf="@+id/image"
                android:layout_toLeftOf="@+id/image"
                android:gravity="center_horizontal"
                android:text="Prabhat Kumar"
                android:textAlignment="center"
                android:textColor="#ed7f20"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/founder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:layout_toStartOf="@+id/image"
                android:layout_toLeftOf="@+id/image"
                android:gravity="center_horizontal"
                android:text="(Founder-Prabhat Trading Service)"
                android:textAlignment="center"
                android:textColor="#FFF"
                android:textSize="12dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_marginTop="3dp"
        android:background="@color/grey_light_secondary" />

    <TextView
    android:id="@+id/firstTxt1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/first"
    android:textSize="12dp"
        android:padding="@dimen/space5"
        android:gravity="start"
        android:layout_marginLeft="10dp"
        android:textColor="#333"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp"
        android:justificationMode="inter_word"
        />

    <TextView
        android:id="@+id/firstTxt2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:textAlignment="viewStart"
        android:padding="@dimen/space5"
        android:gravity="start"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:justificationMode="inter_word"
        android:text="@string/second"
        android:textColor="#333"
        style="@style/TextAppearance.AppCompat.Body1"
        android:textSize="12dp"

        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:padding="2dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot"
            android:layout_marginTop="@dimen/space10"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/third"
            android:textColor="#333"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textSize="12dp"
            android:justificationMode="inter_word"
            android:gravity="start"
            android:layout_marginLeft="10dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:padding="2dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot"
            android:layout_marginTop="@dimen/space10"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/forth"
            android:textColor="#333"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textSize="12dp"
            android:justificationMode="inter_word"
            android:gravity="start"
            android:layout_marginLeft="10dp"  />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:padding="2dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot"
            android:layout_marginTop="@dimen/space10"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fifth"
            android:textColor="#333"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textSize="12dp"
            android:justificationMode="inter_word"
            android:layout_marginLeft="10dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:padding="2dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/dot"
            android:layout_marginTop="@dimen/space10"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sixth"
            android:textColor="#333"
            style="@style/TextAppearance.AppCompat.Body1"
            android:textSize="12dp"
            android:justificationMode="inter_word"
            android:layout_marginLeft="10dp"           />
    </LinearLayout>

   <TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorPrimary"
   android:layout_margin="@dimen/space5"
    android:padding="@dimen/space5"
    android:text="  Our Mission"
    android:textColor="#fff"
    android:textSize="15dp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/space5"
        android:text="@string/seven"
        android:textColor="#333"
        android:padding="@dimen/space5"
        android:justificationMode="inter_word"
        style="@style/TextAppearance.AppCompat.Body1"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:textSize="12dp"/>

</LinearLayout>

</ScrollView>